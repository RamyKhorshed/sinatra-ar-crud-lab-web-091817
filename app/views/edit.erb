<h1><%=@post.name%></h1>
<p><%=@post.content%></p>

<form action="/posts/<%=@post.id%>" method="post">
  <p>Blog Title: <input type="text" name="name"></p>
  <p>Blog Content: <input type="text" name="content"></p>
  <input type="submit" value="submit">
  <input id="hidden" type="hidden" name="_method" value="patch">
</form>
